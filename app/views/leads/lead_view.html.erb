<section class="main_section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-12">
					<ul class="list-inline main_view">
						<li class="list-inline-item"><a href="" class="btn_red active"><span>Lead View</span></a></li>
						<li class="list-inline-item"><a href="/pipeline_view" class="btn_purple"><span>Pipeline View</span></a></li>
					</ul>
					<div class="lead_view_flex">
						<h4><%= @lead.first_name %></h4>
						<div class="tager text-uppercase"><%= @lead.heat ? @lead.heat : 'cold' %></div>
						<select class="form-control">
							<option>PROSPECTING</option>
							<option>Contacted</option>
							<option>Demo</option>
							<option>Followup</option>
							<option>Close</option>
						</select>
            <%= link_to edit_lead_path(@lead.id), class: "edit" do %>
              <%= image_tag("edit-icon-2.svg", alt: "#") %>
            <% end %>
					</div>
					<div class="row justify-content-center">
						<div class="col-12 col-md-4">
							<div class="blue_box">
								<div class="search_flex">
									<div class="form-group group_lg">
										<input type="text" name="" class="search form-control" placeholder="Search">
										<span class="search_icon"><%= image_tag("search-icon.svg", alt: "#") %></span>
									</div>
									<div class="form-group">
										<button class="add_button"><%= image_tag("plus-button-icon.svg", alt: "#") %></button>
									</div>
								</div>
								<div class="search_flex">
									<div class="form-group">
										<select class="form-control">
											<option>Filter</option>
											<option>Filter</option>
											<option>Filter</option>
										</select>
									</div>
								</div>
                <% @leads.each do |lead| %>
                  <div class="dark_box">
                    <%= image_tag("profile-image-3.png", alt: "#") %>
  									<div class="text">
  										<div class="name">
                        <%= lead.full_name %>
                        <% if lead.heat == "warm" %>
                          <span class="type yellow">WARM</span>
                        <% elsif lead.heat == "hot" %>
                          <span class="type red">HOT</span>
                        <% else %>
                          <span class="type blue">COLD</span>
                        <% end %>
                      </div>
  										<a href="#" class="tele"><%= lead.phone_number %></a>
  										<div class="dropdown">
  										  <button class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                          <%= image_tag("three_dots2.png", alt: "#") %>
  										  </button>
  										  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
  										    <li><a class="dropdown-item" href="#">Action</a></li>
  										    <li><a class="dropdown-item" href="#">Another action</a></li>
  										    <li><a class="dropdown-item" href="#">Something else here</a></li>
  										  </ul>
  										</div>
  									</div>
  									<span class="unread"></span>
  								</div>
                <% end %>
								<ul class="list-inline controls">
									<li class="list-inline-item"><a href="#"><%= image_tag("previous-button.png", alt: "#") %></a></li>
									<li class="list-inline-item"><a href="#"><%= image_tag("next-button.png", alt: "#") %></a></li>
								</ul>
							</div>
						</div>
						<div class="col-12 col-md-6">
							<div class="blue_box">
								<div class="message_wrap">
									<div class="messenger left">
                    <%= image_tag("profile-image-2.png", alt: "#") %>
										<div class="text_box">Hey Ivone, this is Peter from Harty Builders. Did you descide on which product you wanted yet?</div>
										<span class="time">Peter on May 15th, 2021 @ 9:37 am</span>
									</div>
									<div class="messenger right">
                    <%= image_tag("profile-image-3.png", alt: "#") %>
										<div class="text_box">Not yet.. Still trying to figure out what I want. <br>Any recommendations?</div>
										<span class="time">Ivone May 15th, 2021 @ 9:37 am</span>
									</div>
									<div class="messenger left">
                    <%= image_tag("profile-image-2.png", alt: "#") %>
										<div class="text_box">Hey Ivone, this is Peter from Harty Builders. Did you descide on which product you wanted yet?</div>
										<span class="time">Peter on May 15th, 2021 @ 9:37 am</span>
									</div>
								</div>
								<div class="message_write">
									<input type="text" placeholder="Type your message..." class="form-control">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
