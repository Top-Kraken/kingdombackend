<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-6">
                    <h4 class="mb-5">New Leads</h4>
                </div>
                <div class="col-6">
                    <ul class="list-inline top_select">
                        <li class="list-inline-item"><a href="/leads/new">One Person</a></li>
                        <li class="list-inline-item"><a href="#" class="active">CSV Upload</a></li>
                    </ul>
                </div>
            </div>
            <div class="progress_wrap">
                <label>Clients.csv uploading</label>
                <div class="progress">
                    <div class="progress-bar" style="width: 100%;"></div>
                </div>
            </div>
            
            <div class="hidden-xs">
                <div class="table_box">
                    <div class="top_head">
                        <div class="th">Name</div>
                        <div class="th">Phone</div>
                        <div class="th">Actions
                            <div class="dropdown">
                            <button class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <%= image_tag("three_dots.png", alt: "#") %>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                            </div>
                        </div>
                    </div>
                    <div id="leads-container" class="bot_data">
                        <%= render 'csv' , remote: true %>
                    </div>
                </div>
            </div>
            <div class="visible-xs">
                <div class="table_mob">
                    <div class="dropdown">
                    <button class="btn_drop dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Sort by Name <%= image_tag("dropdown-icon.svg", alt: "#") %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="#">Sort by Name</a></li>
                        <li><a class="dropdown-item" href="#">Sort by Name</a></li>
                        <li><a class="dropdown-item" href="#">Sort by Name</a></li>
                    </ul>
                    </div>
                    <div id="leads-container">
                    <%= render 'mobile_csv' , remote: true %>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <a href="/leads" class="btn_red"><span>Cancel</span></a>
            </div>
        </div>
    </div>
</div>