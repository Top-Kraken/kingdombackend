<section class="form_section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'phone-number-form' }) do |f| %>
          <h4>Sign In</h4>
          <div class="form-group">
            <%= f.phone_field :phone_number, autofocus: true, autocomplete: "phone-number", class: 'form-control phone-number-field', placeholder: 'Phone Number', required: true %>
            <span class="number-error-msg hide"></span>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control pswrd', placeholder: 'Password', required: true %>
            <a href="#" class="input_icon">
              <%=image_tag("lock-icon.png", alt: "Lock") %>
            </a>
          </div>
          <div class="text-right">
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'forgot_password' %>
            <% end %>
          </div>
          <div class="text-center">
            <%= f.button "Submit", class: 'btn_red' do %>
              <span>NEXT</span>
            <% end %>
          </div>
          <p>Donâ€™t have an account? 
            <%= link_to "Sign up", new_registration_path(resource_name) %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
