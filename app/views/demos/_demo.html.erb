

<div class="modal-content">
<div class="modal-header">
  <h5 class="modal-title">Demo with <%= appointment.lead.first_name %></h5>
       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
  <b>Scheduled at:</b>  <%= appointment.start_time.strftime('%A %B %e, %Y') %>, <%= appointment.duration %>
</div>
<div class="modal-footer">
  <% if current_user.zoom_link.present? %>
    <%= link_to 'Send Demo Link Again', demo_send_reminder_path(appointment), class: 'btn btn-primary', method: :post %>
  <% else %>
    <span>Please add personal zoom <%= link_to 'here', demo_settings_path %> to send invite to lead.</span>
  <% end %>
</div>
</div>