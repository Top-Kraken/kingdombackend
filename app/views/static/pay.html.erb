<section class="form_section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-md-4">
				<%= form_tag subscriptions_path do %>
					<h4>Pay</h4>
					<input type="hidden" name="subscription_id" value="<%= params[:subscription_id] %>" />
					<label>Email</label>
					<div class="form-group">
						<input type="text" name="email" class="form-control" placeholder="Enter email address">
					</div>
					<label>Card Number</label>
					<div class="form-group">
						<input type="text" name="number" class="form-control" placeholder="1234-5678-1234-5678">
						<a href="#" class="input_icon ccard"><%= image_tag("credit-card-icon.png", alt: "#") %></a>
					</div>
					<div class="row">
						<div class="col-8">
							<div class="form-group">
								<input type="text" name="date" class="form-control" placeholder="Date (MM/YY)">
							</div>
						</div>
						<div class="col-4">
							<div class="form-group">
								<input type="text" name="cvc" class="form-control" placeholder="CVC">
							</div>
						</div>
					</div>
					<div class="text-right btn_text">
						<button type="submit" class="btn_red visible-xs"><span>PAY $<%= @amount %></span></button>
						<a href="/subscriptions" class="btn_red"><span>Cancel</span></a>
						<button class="btn_red hide" type="submit"><span>PAY $<%= @amount %></span></button>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
